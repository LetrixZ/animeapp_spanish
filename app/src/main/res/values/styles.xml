<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="tooltipFrameBackground">@color/appBackground</item>
        <item name="android:windowBackground">@color/appBackground</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="VideoPlayer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="type_title" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/types_title</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="type_value" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/types_value</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="plot_summary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/types_title</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="alert_dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
